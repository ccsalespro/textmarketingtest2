<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Merchant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.name %></td>
        <td><%= customer.email %></td>
        <td><%= customer.phone_number %></td>
        <td><%= customer.merchant_id %></td>
        <td><%= link_to 'Show', merchant_customer_path(@merchant, customer) %></td>
        <td><%= link_to 'Edit', edit_merchant_customer_path(@merchant, customer) %></td>
        <td><%= link_to 'Destroy', merchant_customer_path(@merchant, customer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New customer', new_merchant_customer_path(@merchant) %>
