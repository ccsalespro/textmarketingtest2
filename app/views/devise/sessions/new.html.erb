<br>
<div class="col-md-6 col-md-offset-3">
  <div class="well">

    <h2 class="text-center"><%= resource_name.to_s.titleize.split(' ')[0...-1].join(' ') %> Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, class: 'text-box', placeholder: 'Email' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "off", class: 'text-box', placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field checkbox col-sm-6 pull-left remember hidden-xs" style="padding-left: 0px;">
            <label style="font-size: 1.5em; padding-left: 0px;" class="pull-left remember sm-up-brpt-remember">
                <%= f.check_box :remember_me %>
                <span class="cr">
                    <i class="cr-icon fa fa-check"></i>
                </span>
                Remember Me
            </label>
        </div>
      <% end -%><div class="clearfix"></div>

      <%= render "devise/shared/links" %>

      <div class="actions">
        <%= f.submit "Log In", class: 'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>