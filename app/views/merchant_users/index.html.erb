<div style="padding-top: 20px;"></div>
<div class="col-md-10 col-md-offset-1 col-sm-12">
  <div class="well">

  <h1 class="text-center" style="margin-bottom: 0px;">Employees</h1>
  <%= link_to "Invite Employee", merchant_users_new_merchant_user_path(merchant: @merchant), class: 'btn btn-primary', style: 'width: 100%;' %>

		 <table class="table table-minimal">
      <thead>
        <tr>
          <th>Name</th>
          <th class="hidden-xs">Email</th>
          <th>Phone Number</th>
          <th>Accepted</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>

      	<% @merchant_roles.each do |merchant_role| %>
      		<% merchant_role.merchant_users.each do |merchant_user| %>
	      		<tr>
	            <td><%= merchant_user.name %></td>
	            <td class="hidden-xs"><%= merchant_user.email %></td>
							<td><%= merchant_user.phone_number %></td>
              <td><% if merchant_user.invitation_accepted_at != nil %>Yes<% else %>No<% end -%></td>
              <td><%= link_to "Edit", edit_merchant_user_path(merchant_user), class: 'btn btn-primary btn-sm', style: 'display: block; margin: auto;' %></td>
	            <td>
              <%= link_to "Delete", merchant_users_destroy_merchant_user_path(merchant_user: merchant_user), data: {confirm: 'Are You Sure?'}, method: :delete, class: 'btn btn-primary btn-sm', style: 'display: block; margin: auto;' %></td>
	          </tr>
      		<% end -%>
      	<% end -%>
      </tbody>
    </table>
	</div>
</div>



