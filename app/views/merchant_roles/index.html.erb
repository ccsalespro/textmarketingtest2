<div style="padding-top: 20px;"></div>
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="well">


    <h1 class="text-center" style="margin-bottom: 0px;">Roles</h1>
    <% if CreateMerchantRole.new(current_merchant_user, current_admin).check %>
      <%= link_to 'New Role', new_merchant_role_path(merchant: @merchant), class: 'btn btn-primary', style: 'width: 100%;' %>
    <% end -%>

    <table class="table table-minimal">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @merchant_roles.each do |merchant_role| %>
          <tr>
            <td><%= merchant_role.name %></td>
            <td><%= link_to "Edit", merchant_role_path(merchant_role), class: 'btn btn-primary btn-sm', style: 'display: block; margin: auto;' %></td>
            <td><%= link_to 'Delete', merchant_role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-sm', style: 'display: block; margin: auto;' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>