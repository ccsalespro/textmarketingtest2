<p id="notice"><%= notice %></p>

<h1>Merchant Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Merchant</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchant_roles.each do |merchant_role| %>
      <tr>
        <td><%= merchant_role.name %></td>
        <td><%= merchant_role.merchant_id %></td>
        <td><%= link_to 'Show', merchant_role %></td>
        <td><%= link_to 'Edit', edit_merchant_role_path(merchant_role) %></td>
        <td><%= link_to 'Destroy', merchant_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

