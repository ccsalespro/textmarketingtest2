<h1>Company Permissions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_permissions.each do |company_permission| %>
      <tr>
        <td><%= company_permission.name %></td>
        <td><%= link_to 'Show', company_permission %></td>
        <td><%= link_to 'Edit', edit_company_permission_path(company_permission) %></td>
        <td><%= link_to 'Destroy', company_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

