<div style="padding-top: 20px;"></div>
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="well">

    <h1  class="text-center" style="margin-bottom: 0px;">Sent Messages</h1>


    <%= link_to 'New Message', new_merchant_message_path(@merchant), class: 'btn btn-primary', style: 'width: 100%;' %>

    <table class="table table-minimal">
      <thead>
        <tr>
          <th>Body</th>
          <th><span class="pull-right">Sent</span></th>
        </tr>
      </thead>

      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.body %></td>
            <td><span class="pull-right"><%= message.created_at.strftime("%m/%d/%Y") %> <%= message.created_at.strftime("%I:%M %p") %></span></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>