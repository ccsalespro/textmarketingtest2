<div style="padding-top: 20px;"></div>
<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="well">
    <h2 class="text-center">New Message</h2>
    <%= form_for([@merchant, @message]) do |form| %>

      <%= form.hidden_field :merchant_id, value: @merchant.id %>

      <div class="field">
        <%= form.text_field :subject, class: 'text-box', placeholder: 'Subject' %>
      </div>
      <div class="field">
        <%= form.text_area :body, class: 'text-box', placeholder: 'Body' %>
      </div>

      <div class="actions">
        <%= form.submit "Publish", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>