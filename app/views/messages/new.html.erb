<h1>New Message</h1>
<%= form_for([@merchant, @message]) do |form| %>

  <%= form.hidden_field :merchant_id, value: @merchant.id %>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>
  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
