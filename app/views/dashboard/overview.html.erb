								<h1 style="font-size: 30px; padding-top: 15px;" class="page-title">Welcome, <%= current_admin.name %></h1>
							<% elsif company_user_signed_in? %>
								<h1 style="font-size: 30px; padding-top: 15px;" class="page-title">Welcome, <%= current_company_user.name %></h1>
							<% elsif merchant_user_signed_in? %>
								<h1 style="font-size: 30px; padding-top: 15px;" class="page-title">Welcome, <%= current_merchant_user.name %></h1>
